@{
    ViewBag.Title = "Course List";
    List<Course> courses = Course.GetAll();
}
<h1 class="title text-center" style="font-size: 4em; color: white;">Courses</h1>
<div class="row" style="margin-top: 0.5em;">
    <div class="medium-8 medium-offset-2 double-padded" style="background-color: white;">        
        <ul class="menu">
        @foreach(Course c in courses) {
            <li><i class="fa fa-arrow-right" style="display: inline; vertical-align: baseline;"></i><a href="/Course/@c.ID" style="font-size: 1.6em; display: inline; vertical-align: sub;">@c.Name</a></li>    
        }
        </ul>
    </div>
</div>