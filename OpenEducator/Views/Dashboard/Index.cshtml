@{ 
    ViewBag.Title = "Dashboard";
    ViewBag.ContainerStyle = "padding: 20px;";
}

<h3> Current Directory - @AppDomain.CurrentDomain.BaseDirectory </h3>

<ul>
    
    @foreach (string dir in Directory.GetDirectories(AppDomain.CurrentDomain.BaseDirectory)) {
        <li>@dir</li>
    }
    
</ul>